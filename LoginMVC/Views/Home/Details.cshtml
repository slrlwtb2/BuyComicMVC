@model LoginMVC.Models.ShoppingCart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form asp-action="Details">
    <div class="card">
        <img src="@Model.Product.ImageURL" alt="Product Image" class="card-img-top product-image" />
        <div class="card-body">
            <input asp-for="ProductId" hidden />
            <h4 class="card-title">@Html.DisplayFor(model => model.Product.Title)</h4>
            <p class="card-text">@Html.DisplayFor(model => model.Product.Description)</p>
            <p class="card-text"><strong>Author:</strong> @Html.DisplayFor(model => model.Product.Author)</p>
            <p class="card-text"><strong>Price:</strong> @Html.DisplayFor(model => model.Product.Price)</p>
            <p class="card-text"><strong>Category:</strong> @Html.DisplayFor(model => model.Product.Category.Name)</p>
            <p class="card-text"><strong>Count:</strong> <input asp-for="Count" type="number" class="form-control" /></p>
        </div>
    </div>

    <div class="mt-3">
        <input type="submit" value="Add to Cart" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<style>
    .product-image {
        height: 300px;
        object-fit: contain;
    }
</style>
