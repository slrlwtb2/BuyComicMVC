@model IEnumerable<LoginMVC.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card product-card">
                <img src="@item.ImageURL" alt="Product Image" class="card-img-top product-image" />
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">Author: @Html.DisplayFor(modelItem => item.Author)</p>
                    <p class="card-text">Price: @Html.DisplayFor(modelItem => item.Price)</p>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .product-card {
        border: 1px solid #dee2e6;
        margin-bottom: 15px;
    }

    .product-image {
        height: 200px;
        object-fit: cover;
    }
</style>
