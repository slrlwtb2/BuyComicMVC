@model List<Product>

<partial name="_Notifications"></partial>

<h1>Product</h1>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateProduct" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(obj.ImageURL))
                        {
                            <img src="@obj.ImageURL" alt="Product Image" width="100" height="100" />
                        }
                    </td>
                    <td>@obj.Title</td>
                    <td>@obj.Author</td>
                    <td>@obj.Price</td>
                    <td>@(obj.Category != null ? obj.Category.Name : "")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
