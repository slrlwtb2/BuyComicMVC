@using LoginMVC.DTO;
@model CartDTO

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

@if (Model.ShoppingCartList != null && Model.ShoppingCartList.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCartList)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Count</td>
                    <td>$@item.Product.Price</td>
                    <td>$@(item.Count * item.Product.Price)</td>
                    <td>
                        <a asp-controller="ShoppingCart" asp-action="Edit" asp-route-productId="@item.ProductId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="ShoppingCart" asp-action="Delete" asp-route-productId="@item.ProductId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-right"><strong>Total Order:</strong></td>
                <td><strong>$@Model.TotalPrice</strong></td>
                <td></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}
